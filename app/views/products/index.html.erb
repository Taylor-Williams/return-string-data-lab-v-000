<%= render @products %>
<script type="text/javascript">
  $(function(){
    $(".js-more").on('click', function(){
      let id = $(this).data("id")
      let des = $.get('/product/'+id+'/description', function(description){
        console.log(description)
        return description
      })
      let inv = $.get('/product/'+id+'/inventory', function(inventory){
        console.log(inventory)
        return inventory
      })
      $(`#product-${id}`)[0].innerText = `description: ${des}, inventory: ${inv}`
    })
  })
</script>
